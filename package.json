{
  "name": "nextjs-electron-app",
  "version": "0.1.0",
  "private": true,
  "author": "BipRaider",
  "description": "An Electron + Next.js 13+ application.",
  "keywords": [
    "electron",
    "next",
    "esbuild",
    "typescript",
    "zustand",
    "immer"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/BipRaider/nextjs-electron-app.git"
  },
  "main": "./apps/main.js",
  "scripts": {
    "dev": "run-p dev:next dev:esbuild dev:electron",
    "dev:next": "cross-env NODE_ENV=\"development\" next dev frontend",
    "dev:esbuild": "cross-env NODE_ENV=\"development\" ts-node ./esbuild.ts",
    "dev:electron": "wait-on ./apps/main.js http://localhost:3000 && electronmon ./apps/main.js",
    "prebuild": "run-p lint:fix",
    "build": "rimraf apps && run-p prod:next && run-p prod:electron",
    "prod:next": "cross-env NODE_ENV=\"production\" next build frontend",
    "prod:electron": "tsc && cross-env NODE_ENV=\"production\" ts-node ./esbuild.ts",
    "rebuild": "electron-rebuild -f -w ./apps/main.js",
    "postinstall": "electron-builder install-app-deps",
    "prepackage": "run-p build",
    "package": "rimraf release && ts-node ./builder.ts",
    "lint": "run-p lint:frontend lint:backend",
    "lint:fix": "run-p lint:frontend:fix lint:backend:fix",
    "lint:frontend": "next lint frontend",
    "lint:backend": "eslint ./backend/**/*.{js,ts}",
    "lint:backend:fix": "eslint ./backend/**/*.{js,ts} --fix",
    "lint:frontend:fix": "eslint ./frontend/**/*.{ts,tsx} --fix",
    "up:version": "npm version patch",
    "husky-init": "npx husky-init",
    "test": "jest"
  },
  "dependencies": {
    "@types/node": "20.4.9",
    "@types/react": "18.2.20",
    "@types/react-dom": "18.2.7",
    "classnames": "^2.3.2",
    "cross-env": "^7.0.3",
    "date-fns": "^2.30.0",
    "electron-is-dev": "^2.0.0",
    "electron-log": "^4.4.8",
    "electron-reload": "^2.0.0-alpha.1",
    "electron-serve": "^1.1.0",
    "electron-store": "^8.1.0",
    "electron-updater": "^6.1.1",
    "framer-motion": "^10.15.2",
    "immer": "^10.0.2",
    "next": "13.4.13",
    "next-auth": "^4.23.0",
    "react": "18.2.0",
    "react-dom": "18.2.0",
    "react-hook-form": "^7.45.4",
    "rimraf": "^5.0.1",
    "zod": "^3.22.0",
    "zustand": "^4.4.1"
  },
  "devDependencies": {
    "@electron/notarize": "^2.1.0",
    "@electron/rebuild": "^3.2.13",
    "@testing-library/jest-dom": "^6.0.0",
    "@types/classnames": "^2.3.1",
    "@types/jest": "^29.5.3",
    "@types/testing-library__jest-dom": "^5.14.9",
    "@typescript-eslint/eslint-plugin": "^6.4.0",
    "@typescript-eslint/parser": "^6.4.0",
    "electron": "^26.0.0",
    "electron-builder": "^24.6.3",
    "electron-devtools-installer": "^3.2.0",
    "electronmon": "^2.0.2",
    "esbuild": "^0.19.2",
    "eslint": "^8.47.0",
    "eslint-config-next": "^13.4.16",
    "eslint-import-resolver-alias": "^1.1.2",
    "eslint-import-resolver-typescript": "^3.6.0",
    "eslint-plugin-import": "^2.28.0",
    "eslint-plugin-react-hooks": "^5.0.0-canary-7118f5dd7-20230705",
    "husky": "^8.0.3",
    "jest": "^29.6.2",
    "jest-environment-jsdom": "^29.6.2",
    "npm-run-all": "^4.1.5",
    "ts-jest": "^29.1.1",
    "ts-node": "^10.9.1",
    "typescript": "^5.1.6",
    "wait-on": "^7.0.1"
  },
  "electronmon": {
    "patterns": [
      "apps/**/*"
    ]
  }
}
