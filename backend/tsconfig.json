{
  "extends": "../tsconfig.json",
  "compilerOptions": {
    "noImplicitAny": true,
    "noUnusedParameters": true,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "outDir": "../apps",
    "paths": {
      "@helpers/*": [
        "./helpers/*"
      ],
    }
  },
  "include": [
    "**/*.ts",
  ],
  "exclude": [
    "node_modules",
    "**/*.(test|spec).(ts|tsx)"
  ]
}