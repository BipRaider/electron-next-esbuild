{
  "extends": "../.eslintrc.json",
  "parserOptions": {
    "ecmaVersion": "latest",
    "sourceType": "module",
    "tsconfigRootDir": "./",
    "project": "./tsconfig.json"
  },
  "settings": {
    "import/core-modules": [
      "node",
      "typescript"
    ],
    "import/extensions": [
      ".ts"
    ],
    "import/parsers": {
      "@typescript-eslint/parser": [
        ".ts"
      ]
    },
    "import/resolver": {
      "typescript": {
        "project": [
          "./tsconfig.json"
        ]
      },
      "node": {
        "extensions": [
          ".ts"
        ]
      }
    }
  }
}